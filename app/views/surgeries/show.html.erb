<h1>This is info about <%= @surgery.title %></h1>

<li><%= @surgery.title %></li><br>
<li><%= @surgery.operating_room_number %></li>



<% surgery_1 = @surgery.id %>
<% @surgeries.each do |surgery| %>
  <% if surgery.id != surgery_1 && surgery.day == @surgery.day %>
    <p>"Other surgeries happening this day of the week: <%= surgery.title %>"</p>
    <% end %>
  <% end %>

  <p>Add A Doctor To This Surgery</p>
  <%= form_tag "/surgeries/#{@surgery.id}", method: :patch  do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Add Doctor To Surgery' %>
  <% end %>
